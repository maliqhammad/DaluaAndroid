<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:contentDescription="@string/todo" />

            <LinearLayout
                android:layout_width="@dimen/_230sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:id="@+id/phone_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="@string/todo" />


                <!--                <ImageView-->
                <!--                    android:id="@+id/dots_1"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:src="@drawable/ic_dots_horizontally" />-->

                <ImageView
                    android:id="@+id/dots_2"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@color/text_color_gray"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:id="@+id/connectivity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/ic_connectivity_icon"
                    android:contentDescription="@string/todo" />


                <ImageView
                    android:id="@+id/dots_3"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@color/text_color_gray"
                    android:contentDescription="@string/todo" />

                <!--                <ImageView-->
                <!--                    android:id="@+id/dots_4"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginStart="@dimen/_2sdp"-->
                <!--                    android:layout_marginEnd="@dimen/_10sdp"-->
                <!--                    android:src="@drawable/ic_dots_horizontally" />-->

                <ImageView
                    android:id="@+id/lightImg"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/light_img"
                    android:contentDescription="@string/todo" />


                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="@string/device_pairing"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/open_sans_regular"
                android:gravity="center"
                android:text="@string/lorem_ipsum_fact_that_a_reader_will_be_distracted_by_the_readable_content"
                android:textColor="@color/text_secondary_color"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:id="@+id/indicator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/first_circle"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/selected_blu_circle"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:id="@+id/second_circle"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/selected_grey_circle"
                    android:contentDescription="@string/todo" />

                <ImageView
                    android:id="@+id/third_circle"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:src="@drawable/selected_grey_circle"
                    android:contentDescription="@string/todo" />

            </LinearLayout>

            <Button
                android:id="@+id/button_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/open_sans_bold"
                android:padding="@dimen/_5sdp"
                android:text="@string/retry"
                android:textAllCaps="false"
                android:visibility="gone"
                app:backgroundTint="@color/selected_blue_dot_color" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/_15sdp"
                android:background="@color/white"
                android:contentDescription="@string/todo" />

        </LinearLayout>

        <ImageView
            android:id="@+id/alert_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_error_alert"
            android:visibility="gone"
            android:contentDescription="@string/todo" />

    </FrameLayout>


</androidx.cardview.widget.CardView>